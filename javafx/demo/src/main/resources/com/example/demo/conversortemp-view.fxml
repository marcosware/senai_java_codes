<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="458.0" prefWidth="288.0" spacing="20.0" style="-fx-background-color: black; -fx-border-color: #b500ff; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ConversorTempController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Label minHeight="-Infinity" minWidth="-Infinity" prefHeight="108.0" prefWidth="185.0" text="Insira a temperatura em graus Celsius:" textAlignment="CENTER" textFill="WHITE" wrapText="true">
      <font>
         <Font size="20.0" />
      </font></Label>
   <TextField fx:id="inputField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="123.0" style="-fx-background-color: black; -fx-border-color: #b500ff; -fx-border-width: 2; -fx-text-fill: white;">
      <font>
         <Font size="32.0" />
      </font></TextField>
   <Label alignment="TOP_LEFT" prefHeight="18.0" prefWidth="272.0" text="Converter para:" textFill="WHITE" />
   <RadioButton id="fahrenheit" alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="18.0" prefWidth="214.0" text="Fahrenheit" textFill="WHITE">
      <padding>
         <Insets right="16.0" />
      </padding>
      <toggleGroup>
         <ToggleGroup fx:id="radio" />
      </toggleGroup>
   </RadioButton>
   <RadioButton id="kelvin" alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="18.0" prefWidth="215.0" text="Kelvin" textFill="WHITE" toggleGroup="$radio">
      <padding>
         <Insets right="16.0" />
      </padding>
   </RadioButton>

  <Label fx:id="resultText" textFill="RED">
      <font>
         <Font size="22.0" />
      </font></Label>
  <Button onAction="#onRunButtonClick" prefHeight="25.0" prefWidth="95.0" style="-fx-border-color: #b500ff; -fx-border-width: 2; -fx-background-color: null;" text="Executar" textFill="#b500ff">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>
   <Group />
</VBox>
